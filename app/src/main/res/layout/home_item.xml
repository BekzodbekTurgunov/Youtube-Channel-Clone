<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/videView"
        android:layout_alignParentLeft="true"
        android:layout_width="140dp"
        android:layout_marginRight="7dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/video_title"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_toRightOf="@id/videView"
        android:text="Khabib Nurmagamedov Vs Conor Mackgregor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start" />
    <TextView
        android:id="@+id/upload_time"
        android:layout_toRightOf="@id/videView"
        android:layout_below="@id/video_title"
        android:textSize="12dp"
        android:text="2 weeks ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/view_count"
        android:layout_toRightOf="@id/upload_time"
        android:layout_marginLeft="9dp"
        android:layout_below="@id/video_title"
        android:textSize="12dp"
        android:text="3000 views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>